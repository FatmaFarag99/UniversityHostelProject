@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Claims.FirstOrDefault(e => e.Type == "fullname")?.Value !
        <a href="Logout">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a href="Login">Log in</a>
        <a href="Register">Register</a>
    </NotAuthorized>
</AuthorizeView>