@using SmartUI.Forms
@inherits BaseComponent


@code {
    [CascadingParameter(Name = "ParentTapControl")]
    public TabControl ParentTabControl { get; set; }
    [Parameter] public RenderFragment<TabRequestArgs> FooterTemplate { get; set; }
    [Parameter] public bool ShowPreviousNext { get; set; }

    protected override void OnInitialized()
    {
        if (ParentTabControl is null)
            throw new ArgumentNullException(nameof(ParentTabControl), "TabFooter must exist within a TabControl");

        ParentTabControl.AddTabFooter(this);

        base.OnInitialized();
    }
}
