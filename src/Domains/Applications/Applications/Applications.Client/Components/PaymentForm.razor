@if (isPaymentCompleted)
{
    <h1>Payment Completed Successfully</h1>

    <div class="form-row">
        <div class="form-group col-md-12 mb-2 ">
            <button type="button" class="btn btn-primary">Next</button>
        </div>
    </div>
}
else
{
    <EditForm Model="PaymentViewModel" OnValidSubmit="HandleValidSubmit">
        <FluentValidator />
        <div class="row">
            <div class="col-12">
                <div class="p-5">

                    <div class="form-row">
                        <div class="form-group col-md-12 mb-2 ">
                            <label>Card Number</label>
                            <span class="text-danger">*</span>
                            <InputText class="form-control form-control-user" @bind-Value="PaymentViewModel.CardNumber" placeholder="Enter the 16-digit card number on the card" />
                            <ValidationMessage For="@(() => PaymentViewModel.CardNumber)" />
                        </div>
                    </div>

                    <br>

                    <div class="form-row">
                        <div class="form-group col-md-12 mb-2 ">
                            <label>Expiry Date</label>
                            <span class="text-danger">*</span>
                            <InputText class="form-control form-control-user" pattern="(?:0[1-9]|1[0-2])/[0-9]{2}" @bind-Value="PaymentViewModel.ExpiryDate" placeholder="Enter the expiration date of the card" />
                            <ValidationMessage For="@(() => PaymentViewModel.ExpiryDate)" />
                        </div>
                    </div>

                    <br>

                    <div class="form-row">
                        <div class="form-group col-md-12 mb-2 ">
                            <label>CVV Number</label>
                            <span class="text-danger">*</span>
                            <InputText class="form-control form-control-user" @bind-Value="PaymentViewModel.CVV" placeholder="Enter the 3 digit on the card" />
                            <ValidationMessage For="@(() => PaymentViewModel.CVV)" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <div>
                @if (!SystemFeatureType.Equals(SystemFeatureType.Details))
                {
                    <button type="submit" class="btn btn-success m-2">Pay</button>
                }
            </div>
        </div>
    </EditForm>
}
