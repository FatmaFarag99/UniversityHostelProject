@page "/Applications/Add"

@attribute [Authorize]

<FormBaseComponent TViewModel="ApplicationViewModel" ViewModel="ApplicationViewModel" SystemFeature="SystemFeatureType" FormTitle="@($"{SystemFeatureType.ToString()} Application")"
                   HandleValidSubmit="HandleValidSubmit" OnCancel="@(() => _navigationManager.NavigateTo("/faculties"))">

<ul class="nav nav-tabs bg-light" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="payment-tab" data-toggle="tab" href="#payment" role="tab" aria-controls="payment"
           aria-selected="true">Payment</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="basic-info-tab" data-toggle="tab" href="#basic-information" role="tab" aria-controls="basic-info"
           aria-selected="false">Basic Information</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#documents" role="tab" aria-controls="documents"
           aria-selected="false">Documents</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="payment" role="tabpanel" aria-labelledby="Payment-tap">

        <div class="container bg-light">
            <div class="card-body p-0">
                <PaymentComponent PaymentViewModel=@ApplicationViewModel.Payment />
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="basic-information" role="tabpanel" aria-labelledby="Basic_information-tap">

        <div class="container bg-light">
            <div class="card-body p-0">
                <BasicInformationComponent BasicInformationViewModel=@ApplicationViewModel.BasicInformation />
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="documents" role="tabpanel" aria-labelledby="Documents-tab">
        <div class="container bg-light">
            <div class="card-body p-0">
                <DocumentsComponent />
            </div>
        </div>
    </div>
</div>

</FormBaseComponent>