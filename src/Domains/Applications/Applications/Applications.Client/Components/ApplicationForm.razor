@page "/Applications/Add"

@attribute [Authorize]

<ul class="nav nav-tabs bg-light" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#Payment" role="tab" aria-controls="home"
           aria-selected="true">Payment</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#Basic_information" role="tab" aria-controls="profile"
           aria-selected="false">Basic_information</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#Documents" role="tab" aria-controls="contact"
           aria-selected="false">Documents</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="Payment" role="tabpanel" aria-labelledby="Payment-tap">

        <div class="container bg-light">
            <div class="card-body p-0">
                <PaymentComponent />
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="Basic_information" role="tabpanel" aria-labelledby="Basic_information-tap">

        <div class="container bg-light">
            <div class="card-body p-0">
                <BasicInformationComponent />
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="Documents" role="tabpanel" aria-labelledby="Documents-tab">
        <div class="container bg-light">
            <div class="card-body p-0">
                <DocumentsComponent />
            </div>
        </div>
    </div>
</div>
