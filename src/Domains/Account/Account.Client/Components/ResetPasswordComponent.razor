@page "/reset-password"

@inject NavigationManager _navigationManager

<div class="row justify-content-center p-5">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 w-75 mx-auto  shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <!-- <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> -->
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Reset Password</h1>
                            </div>
                            @*@if (showErrors)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <p>@error</p>
                                </div>
                            }*@
                            <EditForm Model="resetPasswordViewModel" OnValidSubmit="ResetPassword" class="user">
                                <FluentValidator />
                                <div class="form-group">
                                    <InputText id="email" class="form-control form-control-user" @bind-Value="resetPasswordViewModel.Email" placeholder="Enter your email..." />
                                    <ValidationMessage For="@(() => resetPasswordViewModel.Email)" />
                                </div>
                                <div class="form-group">
                                    <InputText type="password" id="password" class="form-control form-control-user" @bind-Value="resetPasswordViewModel.Password" placeholder="Password" />
                                    <ValidationMessage For="@(() => resetPasswordViewModel.Password)" />
                                </div>
                                <div class="form-group">
                                    <InputText type="password" id="confirmPassword" class="form-control form-control-user" @bind-Value="resetPasswordViewModel.ConfirmPassword" placeholder="Confirm Password" />
                                    <ValidationMessage For="@(() => resetPasswordViewModel.ConfirmPassword)" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Reset Password</button>
                            </EditForm>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="login">Login</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="Register">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
